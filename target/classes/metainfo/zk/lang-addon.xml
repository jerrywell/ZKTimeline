<language-addon>
    <addon-name>timeline</addon-name>
  	<version>
		<version-class>org.zkoss.zk.timeline.Version</version-class>
		<version-uid>0.0.1-SNAPSHOT</version-uid>
		<zk-version>7.0.2</zk-version><!-- or later -->
	</version>
    
	<language-name>xul/html</language-name>
	<component>
		<component-name>timeline</component-name> <!-- required -->
		<component-class>org.zkoss.zk.timeline.Timeline</component-class> <!-- required -->
		<widget-class>timeline.Timeline</widget-class> <!-- required -->
		<mold>
			<mold-name>default</mold-name>
			<mold-uri>mold/timeline.js</mold-uri>

			<!--
			== Tip in advance ==
				You don't have to specify a css.dsp if you need not ,
				but usually you need it.

				You could assign a .css file ,too.

				The css.dsp is almost as same as CSS file ,
				but have more powerful enhancement.	(like EL support.)
			====
			-->
			<css-uri>css/timeline.css.dsp</css-uri>
		</mold>
	</component>
</language-addon>